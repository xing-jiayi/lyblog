<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.crushtj.blog.common.domain.mappers.UserMapper">

    <resultMap type="top.crushtj.blog.common.domain.dos.UserDo" id="UserMap">
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="isDeleted" column="is_deleted" jdbcType="INTEGER"/>
    </resultMap>
    <update id="updatePasswordByUsername">
        UPDATE t_user SET password = #{password}, update_time = NOW() WHERE username = #{username} AND is_deleted = 0
    </update>

    <select id="selectByUsername" resultType="top.crushtj.blog.common.domain.dos.UserDo">
        SELECT * from t_user WHERE username = #{username} AND is_deleted = 0
    </select>
</mapper>
