<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.crushtj.blog.common.domain.mappers.ArticleCategoryRelMapper">

    <resultMap type="top.crushtj.blog.common.domain.dos.ArticleCategoryRelDo" id="ArticleCategoryRelMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="articleId" column="article_id" jdbcType="INTEGER"/>
        <result property="categoryId" column="category_id" jdbcType="INTEGER"/>
    </resultMap>
    <select id="selectByArticleId" resultType="top.crushtj.blog.common.domain.dos.ArticleCategoryRelDo">
        SELECT * FROM t_article_category_rel WHERE is_deleted = 0 AND article_id = #{articleId}
    </select>

</mapper>
