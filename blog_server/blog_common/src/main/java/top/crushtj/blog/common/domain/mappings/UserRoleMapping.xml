<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.crushtj.blog.common.domain.mappers.UserRoleMapper">

    <resultMap type="top.crushtj.blog.common.domain.dos.UserRoleDo" id="UserRoleMap">
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="roleName" column="role_name" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>
    <select id="selectByUserId" resultType="top.crushtj.blog.common.domain.dos.UserRoleDo">
        SELECT * from t_user_role WHERE user_id = #{userId}
    </select>

</mapper>
