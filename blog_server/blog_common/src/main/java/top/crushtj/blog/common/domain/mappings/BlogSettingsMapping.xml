<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.crushtj.blog.common.domain.mappers.BlogSettingsMapper">

    <resultMap type="top.crushtj.blog.common.domain.dos.BlogSettingsDo" id="BlogSettingsMap">
        <result property="settingId" column="setting_id" jdbcType="INTEGER"/>
        <result property="logo" column="logo" jdbcType="VARCHAR"/>
        <result property="blogName" column="blog_name" jdbcType="VARCHAR"/>
        <result property="author" column="author" jdbcType="VARCHAR"/>
        <result property="introduction" column="introduction" jdbcType="VARCHAR"/>
        <result property="avatar" column="avatar" jdbcType="VARCHAR"/>
        <result property="githubHomepage" column="github_homepage" jdbcType="VARCHAR"/>
        <result property="csdnHomepage" column="csdn_homepage" jdbcType="VARCHAR"/>
        <result property="giteeHomepage" column="gitee_homepage" jdbcType="VARCHAR"/>
        <result property="zhihuHomepage" column="zhihu_homepage" jdbcType="VARCHAR"/>
        <result property="customUrl" column="custom_url" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="queryByAuthorId" resultType="top.crushtj.blog.common.domain.dos.BlogSettingsDo">
        SELECT *
        FROM t_blog_settings
        WHERE is_deleted = 0
          AND user_id = #{userId}
    </select>

</mapper>
