<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.crushtj.blog.common.domain.mappers.CategoryMapper">

    <resultMap type="top.crushtj.blog.common.domain.dos.CategoryDo" id="CategoryMap">
        <result property="categoryId" column="category_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="isDeleted" column="is_deleted" jdbcType="INTEGER"/>
    </resultMap>
    <select id="selectByName" resultType="top.crushtj.blog.common.domain.dos.CategoryDo">
        SELECT * FROM t_category WHERE name = #{name} AND is_deleted = 0
    </select>
    <select id="queryCategoryPage" resultType="top.crushtj.blog.common.domain.dos.CategoryDo">
        SELECT * FROM t_category
        WHERE is_deleted = 0
        <if test="searchVo.name != null and searchVo.name != ''">
            AND name LIKE CONCAT('%', #{searchVo.name}, '%')
        </if>
        <if test="searchVo.createTimeStart != null">
            AND create_time &gt;= #{searchVo.createTimeStart}
        </if>
        <if test="searchVo.createTimeEnd != null">
            AND create_time &lt;= #{searchVo.createTimeEnd}
        </if>
        ORDER BY create_time DESC
    </select>
    <select id="getAllCategory" resultType="top.crushtj.blog.common.domain.dos.CategoryDo">
        SELECT * FROM t_category where is_deleted = 0 ORDER BY create_time DESC
    </select>
    <select id="selectNormalById" resultType="top.crushtj.blog.common.domain.dos.CategoryDo">
        SELECT * FROM t_category WHERE category_id = #{categoryId} AND is_deleted = 0
    </select>
</mapper>
